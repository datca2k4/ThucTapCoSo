// math.c

#include <stdio.h>

int cong(int a, int b) {
    return a + b;
}

int tru(int a, int b) {
    return a - b;
}

int nhan(int a, int b) {
    return a * b;
}

float chia(int a, int b) {
    if (b == 0) {
        printf("Loi: Khong the chia cho 0!\n");
        getchar();
        return 0;
    }
    return (float)a / b;
}


